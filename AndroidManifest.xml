<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobilewhenisgood"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.mobilewhenisgood.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mobilewhenisgood.BrowseEvents"
            android:label="@string/title_activity_browse_events"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.mobilewhenisgood.CreateEvents"
            android:label="@string/title_activity_create_events"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.mobilewhenisgood.SetAvailability"
            android:label="@string/title_activity_set_availability"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
